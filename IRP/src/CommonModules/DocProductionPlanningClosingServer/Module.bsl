Function GetProductionPlanningColosing(ProductionPlanningRef) Export
	Query = New Query();
	Query.Text = 
	"SELECT
	|	ProductionPlanningClosing.Ref AS Ref
	|FROM
	|	Document.ProductionPlanningClosing AS ProductionPlanningClosing
	|WHERE
	|	ProductionPlanningClosing.Posted
	|	AND ProductionPlanningClosing.ProductionPlanning = &ProductionPlanning";
	Query.SetParameter("ProductionPlanning", ProductionPlanningRef);
	QueryResult = Query.Execute();
	QuerySelection = QueryResult.Select();
	If QuerySelection.Next() Then
		Return QuerySelection.Ref;
	Else
		Return Undefined;
	EndIf;
EndFunction
