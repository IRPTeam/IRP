{
  "$schema": "https://1c-syntax.github.io/bsl-language-server/configuration/schema.json",
  "language": "en",
  "diagnostics": {
    "parameters": {
      "NestedStatements": false,
      "CognitiveComplexity": false,
      "MethodSize": false,
      "CodeOutOfRegion": false,
      "CyclomaticComplexity": false,
      "NonStandardRegion": false,
      "DeletingCollectionItem": false,
      "CommitTransactionOutsideTryCatch": false,
      "BeginTransactionBeforeTryCatch": false,
      "NestedFunctionInParameters": false,
      "DeprecatedCurrentDate": false,
      "ServerSideExportFormMethod": false,
      "IfElseIfEndsWithElse": false,
      "MissingParameterDescription": false,
      "MissingReturnedValueDescription": {
        "allowShortDescriptionReturnValues": true
      },
      "MultilingualStringHasAllDeclaredLanguages": {
        "declaredLanguages": "en"
      },
      "LineLength": {
        "maxLineLength": 160
      },
      "Typo": {
        "userWordsToIgnore": "Decomposite,Modificator,Modificators,Attr,TRN,Http,Trn,Writeoff,Refreshable,PIGR,SOR,irpteam,Prog,Convertation,Langs,Numpad,Num,NLZ,Multiselect,annulated,noreply,gmail,XDTO,sizepx,javascript,css,unpost,UNPOST,Undopost,Localizations,charset,Splitted,HHM,Unposting,Unselect,Reposting,tmp,Grupped,Acc,Attr,basises,uncheck,Unchecking,cheque,auth,uri,oauth,urlencoded,json,googleapis,Auth,Cheques,Barcodes,Mss,Mdd,jpeg,jpg,png,ico,cfe,Integrations,Expence,Cheque,Args,Unpost,Uncollapsed,Deserialize,Basises,localhost,Webclient,barcode,pcs,Exc,Unbundling,Param,Undoposting,cib,lang",
        "minWordLength": 3
      },
      "RedundantAccessToObject": {
        "checkObjectModule": false,
        "checkFormModule": false,
        "checkRecordSetModule": false
      },
      "AssignAliasFieldsInQuery": false,
      "CommonModuleMissingAPI": false,
      "PublicMethodsDescription": {
        "checkAllRegion": false
      }
    }
  }
}